<%- layout("./layouts/boilerplate") %> <%- include("./flash")%>
<section
  class="vh-100 d-flex justify-content-center align-items-center flex-column"
>
  <h3 class="fw-bolder">Login Aplikasi</h3>

  <div class="card mt-5 glass-morphism glass-morphism-white p-3">
    <div class="card-body p-2">
      <form action="/" method="post">
        <div class="mb-3">
          <label for="username" class="form-label">Username Pengajar</label>
          <input
            type="text"
            name="username"
            class="form-control glass-morphism glass-morphism-white"
            id="username"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password Pengajar</label>
          <input
            type="password"
            name="password"
            class="form-control glass-morphism glass-morphism-white"
            id="password"
            required
          />
        </div>
        <div class="mt-5 d-flex justify-content-center flex-row">
          <button
            type="submit"
            class="btn btn-primary glass-morphism glass-morphism-white"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
